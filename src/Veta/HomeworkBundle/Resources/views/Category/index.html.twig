{% extends "VetaHomeworkBundle::layout.html.twig" %}

{% block title %}VetaHomeworkBundle:Category{% endblock %}

{% block main %}
    <div class="row">
        <div class="col-sm-8 blog-main">
            <div class="sidebar-module sidebar-module-inset">
                <h3>The Category:</h3>
                {% for category in categories %}
                    <h5>
                        {% if category.lvl > 0 %}{% for i in 1..category.lvl %}<span class="indent" style="margin-left: 20px"></span>{% endfor %}{% endif %}
                        <a href="{{ path('veta_homework_category_index', {'slug': category.slug}) }}" style="color: #333;text-decoration: none;cursor: pointer">{{ category.title }}</a>
                    </h5>
                {% endfor %}
            </div>
            <hr>
            {% for post in posts %}
                <div class="blog-post">
                    <h2 class="blog-post-title"><a title="{{ post.title }}" style="color: #333;text-decoration: none;cursor: pointer" href="{{ path('veta_homework_post_view', {'slug': post.slug}) }}">{{ post.title }}</a></h2>
                    <p class="blog-post-meta">
                        <small>
                            <date>{{ post.dateCreate|date('Y-m-d H:m:s') }}</date> by
                            {% for tag in post.tags %}
                                <a href="#">{{ tag.title }}</a> |
                            {% endfor %}
                        </small>
                    </p>
                    {{ post.description|raw }}
                </div>

            {% endfor %}
            <hr>
            {{ knp_pagination_render(posts, "", {}, { "style": "pager", "prev_label": "&larr; Older", "next_label": "Newer &rarr;" }) }}
        </div>
        <div class="col-sm-3 col-sm-offset-1 blog-sidebar">
            <div class="sidebar-module">
                <h4><a title="The Post List" href="{{ path('veta_homework_post_index') }}" style="color: #333;text-decoration: none;cursor: pointer">The Post List</a></h4>
                <ol class="list-unstyled">
                    {% for all in all_posts %}
                        <li><a title="{{ all.title }}" href="{{ path('veta_homework_post_view', {'slug': all.slug}) }}">{{ all.title }}</a></li>
                    {% endfor %}
                </ol>
            </div>
        </div><!-- /.blog-sidebar -->
    </div>

{% endblock %}
