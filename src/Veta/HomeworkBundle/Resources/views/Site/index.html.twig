{% extends "VetaHomeworkBundle::layout.html.twig" %}

{% block title %}VetaHomeworkBundle:Site{% endblock %}

{% block main %}
    <div class="row">
        <div class="col-sm-8 blog-main">
            <div class="blog-header">
                <h1 class="blog-title">The Blog</h1>
                <p class="lead blog-description">The homework template of creating a blog.</p>
            </div>
            <hr>
            {% for post in posts %}
                <div class="blog-post">
                    <h2 class="blog-post-title"><a title="{{ post.title }}" style="color: #333;text-decoration: none;cursor: pointer" href="{{ path('veta_homework_post_view', {'slug': post.slug}) }}">{{ post.title }}</a></h2>
                    <p class="blog-post-meta">
                        <small>
                            <date>{{ post.dateCreate|date('Y-m-d H:m:s') }}</date> by
                            {% for tag in post.tags %}
                                <a href="#">{{ tag.title }}</a> |
                            {% endfor %}
                        </small>
                    </p>
                    {{ post.description|raw }}
                </div>
            {% endfor %}
        </div>
        <div class="col-sm-3 col-sm-offset-1 blog-sidebar">
            {% include 'VetaHomeworkBundle::sidebar.html.twig' %}
            <div class="sidebar-module">
                <h4><a title="The Post List" href="{{ path('veta_homework_post_index') }}" style="color: #333;text-decoration: none;cursor: pointer">The Post List</a></h4>
                <ol class="list-unstyled">
                    {% for all in all_posts %}
                        <li><a title="{{ all.title }}" href="{{ path('veta_homework_post_view', {'slug': all.slug}) }}">{{ all.title }}</a></li>
                    {% endfor %}
                </ol>
            </div>
        </div><!-- /.blog-sidebar -->

    </div><!-- /.row -->
{% endblock %}
